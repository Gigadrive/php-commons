{
	"name": "gigadrive/php-commons",
	"version": "1.0.0",
	"description": "Open-source library used in Gigadrive projects with common PHP utilities",
	"type": "library",
	"license": "MIT",
	"keywords": [
		"Library",
		"Utility",
		"PHP",
		"Extension",
		"Commons",
		"Functions",
		"Gigadrive",
		"Essentials",
		"Basic"
	],
	"authors": [
		{
			"name": "Mehdi Baaboura",
			"email": "mbaaboura@gigadrivegroup.com"
		}
	],
	"homepage": "https://github.com/Gigadrive/php-commons",
	"readme": "README.md",
	"require": {
		"php": "^7.1 || ^8.0",
		"ext-mbstring": "*",
		"ext-iconv": "*"
	},
	"autoload": {
		"files": [
			"src/functions/file.php",
			"src/functions/format.php",
			"src/functions/html.php",
			"src/functions/number.php",
			"src/functions/string.php",
			"src/functions/system.php",
			"src/functions/url.php",
			"src/functions/validation.php"
		],
		"psr-4": {
			"Gigadrive\\PHPCommons\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gigadrive\\PHPCommons\\Tests\\": "tests/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5"
	}
}
